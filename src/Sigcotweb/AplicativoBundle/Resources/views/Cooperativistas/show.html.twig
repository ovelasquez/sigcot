{% extends '::base.html.twig' %}

{% block content %}
<h1>Cooperativistas</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Usuario</th>
            <td>{{ entity.usuario }}</td>
        </tr>
        <tr>
            <th>Clave</th>
            <td>{{ entity.clave }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th>Apellido</th>
            <td>{{ entity.apellido }}</td>
        </tr>
        <tr>
            <th>Cinum</th>
            <td>{{ entity.cinum }}</td>
        </tr>
        <tr>
            <th>Rifnum</th>
            <td>{{ entity.rifnum }}</td>
        </tr>
        <tr>
            <th>Direccion</th>
            <td>{{ entity.direccion }}</td>
        </tr>
        <tr>
            <th>Telefonos</th>
            <td>{{ entity.telefonos }}</td>
        </tr>
        
        <tr>
            <th>Foto</th>
            <td><a href="{{ asset(directorio_imagenes ~ entity.foto ) }}" target="_blank"><img src="{{ asset(directorio_imagenes ~ entity.foto ) }}" height="100px"></a></td>
        </tr>
        <tr>
            <th>Ciarc</th>
            <td><a href="{{ asset(directorio_imagenes ~ entity.ciarc ) }}" target="_blank"><img src="{{ asset(directorio_imagenes ~ entity.ciarc ) }}" height="100px"></a></td>
        </tr>
        <tr>
            <th>Rifarc</th>
            <td><a href="{{ asset(directorio_imagenes ~ entity.rifarc ) }}" target="_blank"><img src="{{ asset(directorio_imagenes ~ entity.rifarc ) }}" height="100px"></a></td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('cooperativistas') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('cooperativistas_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('cooperativistas_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}

